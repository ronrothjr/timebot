#: import environ os.environ
#: import dp kivy.metrics.dp

<TimebotProjectsScreen>

<TimebotAddProjectDialog>
    orientation: "vertical"
    spacing: dp(12)
    size_hint_y: None
    height: dp(180)

    MDLabel:
        id: error
        text: ""
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1

    MDTextField:
        id: code
        hint_text: "Project Code"

    MDTextField:
        id: desc
        hint_text: "Project Description"

<TimebotEditProjectDialog>
    orientation: "vertical"
    spacing: dp(12)
    size_hint_y: None
    height: dp(160)

    MDLabel:
        id: code
        text: ""
        halign: "center"

    MDTextField:
        id: desc
        hint_text: "Project Description"

<TimebotConfirmDeleteProjectDialog>
    orientation: "vertical"
    spacing: dp(12)
    size_hint_y: None
    height: dp(200)

    MDLabel:
        id: error
        text: "Delete this project?"
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1

    MDLabel:
        id: error
        text: "Related tasks will be removed"
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1

    MDLabel:
        id: code
        text: "Project Code"