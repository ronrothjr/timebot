#: import environ os.environ
#: import dp kivy.metrics.dp

<TimebotUndoDialog>
    orientation: "vertical"
    spacing: dp(20)
    size_hint_y: None
    height: dp(240)

    MDBoxLayout:
        orientation: "vertical"
        size_hint: (1,1)
        pos_hint: {"center_x": .5, "top": 1}
        padding: [dp(5),dp(5),dp(5),dp(5)]
        
        RecycleView:
            id: undo_list
            size_hint: 1, 0.9
            viewclass: "ListItem"

            RecycleBoxLayout:
                id: items_box
                orientation: "vertical"
                padding: 0
                default_size_hint: 1, None
                default_height: dp(30)
                size_hint: 1, None
                height: self.minimum_height

<ListItem@OneLineListItem>
    text: root.text
    on_press: root.on_press
    size_hint: 1, None
    height: dp(30)