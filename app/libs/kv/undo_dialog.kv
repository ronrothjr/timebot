#: import environ os.environ
#: import dp kivy.metrics.dp

<MDLabelButton>
    text: root.text
    size_hint: 1, None
    height: dp(50)
    font_style: "Body1"
    pos_hint: {"right": 1, "top": 1}
    on_release:
        root.selected(root.text)

<TimebotUndoDialog>
    orientation: "vertical"
    spacing: dp(20)
    size_hint_y: None
    height: dp(240)

    MDBoxLayout:
        orientation: "vertical"
        size_hint: (1,1)
        pos_hint: {"center_x": .5, "top": 1}
        padding: [dp(5),dp(5),dp(5),dp(5)]
        
        RecycleView:
            id: undo_list
            size_hint: 1, 0.9
            viewclass: "MDLabelButton"

            RecycleBoxLayout:
                id: items_box
                orientation: "vertical"
                padding: dp(5)
                spacing: dp(10)
                default_size_hint: 1, None
                default_height: dp(50)
                size_hint: 1, None
                height: self.minimum_height