#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex


<TimebotSplashScreen>
    canvas:
        Color:
            rgba: gch("20202d")
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        adaptive_height: True
        orientation: "vertical"
        spacing: dp(80)
        padding: dp(30)
        pos_hint: {"center_x": .5, "center_y": .5}

        Image:
            source: f"{environ['TIMEBOT_ROOT']}/assets/images/logo.png"
            pos_hint: {"center_x": .5}
            size_hint: None, None
