#: import environ os.environ
#: import dp kivy.metrics.dp

<TimebotTasksScreen>
    md_bg_color: 1, 1, 1, 0

<TimebotEditTaskDialog>
    orientation: "vertical"
    spacing: dp(20)
    size_hint_y: None
    height: dp(200)

    MDLabel:
        id: error
        text: ""
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1

    MDBoxLayout:
        orientation: "horizontal"
        size_hint_x: None
        width: dp(100)

        MDLabel:
            id: begin
    
        MDIconButton:
            id: begin_time
            icon: 'timeline-clock-outline'

    MDBoxLayout:
        orientation: "horizontal"
        size_hint_x: None
        width: dp(100)

        MDLabel:
            id: end
    
        MDIconButton:
            id: end_time
            icon: 'timeline-clock-outline'

    MDTextField:
        id: code
        hint_text: "Project Code"

<TimebotConfirmDeleteTaskDialog>
    orientation: "vertical"
    spacing: dp(12)
    size_hint_y: None
    height: dp(200)

    MDLabel:
        id: error
        text: "Delete this task?"
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1

    MDLabel:
        id: begin
        text: "Begin Time"

    MDLabel:
        id: end
        text: "End Time"

    MDLabel:
        id: code
        text: "Project Code"